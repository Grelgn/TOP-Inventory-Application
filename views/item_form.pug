extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', name='name' required value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(name='description' rows='4' required value=(undefined===item ? '' : item.description) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(name='category' required)
        option(value='') --Select a category--
          if category_list
            for category in category_list
              if selected_category==category._id.toString()
                option(value=category._id, selected) #{category.name}
              else
                option(value=category._id) #{category.name}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', name='price' required value=(undefined===item ? '' : item.price) )
    div.form-group
      label(for='numberInStock') Number in stock:
      input#numberInStock.form-control(type='number', name='numberInStock' required value=(undefined===item ? '' : item.numberInStock) )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg
